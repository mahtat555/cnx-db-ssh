{% extends "home.jinja" %}

{# Content - Show tables details #}
{% block content %}
    <table class="table">
        <thead>
            <tr>
                {% for column in table.columns %}
                    <th> {{ column }} </th>
                {% endfor %}
            </tr>
        </thead>
        <tbody>
            {% for row in table.rows %}
                <tr>
                    {% for cell in row %}
                        <td>
                            <input value="{{ cell|string|truncate(50) }}">
                        </td>
                    {% endfor %}
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}